{
  "name": "root-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "install": "",
    "build": "npm run build --workspaces",
    "dev": "echo 'Run specific dev script from app directory, e.g., npm run dev --workspace=backend'",
    "start:backend": "npm run start:dev --workspace=backend",
    "start:frontend": "npm run dev --workspace=frontend",
    "start:all": "run-p start:backend start:frontend"
  },
  "devDependencies": {
    "@types/passport-local": "^1.0.38",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.0"
  }
}
